{
  "name": "ilc-sdk",
  "version": "4.0.0",
  "description": "SDK for app development with Isomorphic Layout Composer",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "files": [
    "dist/**",
    "app.js",
    "app.d.ts"
  ],
  "scripts": {
    "build": "tsc -p ./src/app && tsc -p ./src/server",
    "test": "mocha -r ts-node/register **/*.spec.ts",
    "coverage": "nyc npm run test",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tslint -p ./src/app && tslint -p ./src/server",
    "docs": "typedoc",
    "preversion": "npm run format:check && npm run lint && npm test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/namecheap/ilc-sdk.git"
  },
  "author": "Namecheap, Inc",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/namecheap/ilc-sdk/issues"
  },
  "homepage": "https://github.com/namecheap/ilc-sdk#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.4",
    "@types/jsdom": "^16.2.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/memoizee": "^0.4.5",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/sinon": "^9.0.0",
    "@types/webpack": "^4.41.29",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "jsdom": "^16.4.0",
    "mocha": "^7.1.2",
    "mock-http": "^1.1.0",
    "nock": "^13.1.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.20.35",
    "typedoc-plugin-pages-fork": "0.0.1",
    "typedoc-plugin-rename-defaults": "^0.1.0",
    "typescript": "^3.9.7",
    "webpack": "^4.46.0"
  },
  "dependencies": {
    "@types/url-join": "^4.0.0",
    "avsc": "^5.5.3",
    "axios": "^0.21.1",
    "lodash.merge": "^4.6.2",
    "memoizee": "^0.4.15",
    "uglify-js": "^3.13.9",
    "url-join": "^4.0.1",
    "webpack-inject-plugin": "1.5.5",
    "wrapper-webpack-plugin": "2.1.0"
  }
}
